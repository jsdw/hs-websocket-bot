name:                JamesBot
version:             0.1.0.0
synopsis:            Web socket bot: server and basic client
-- description:         
homepage:            http://unbui.lt
-- license:             
author:              James Wilson
maintainer:          jammyw@gmail.com
-- copyright:           
-- category:            
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

executable server
  main-is:             Server.hs
  default-extensions:  OverloadedStrings,
                       ScopedTypeVariables,
                       TemplateHaskell    
  build-depends:       base >=4.8 && <4.9, 
                       websockets == 0.9.3.*, 
                       text == 1.2.*, 
                       mtl == 2.2.*,
                       network == 2.6.0.*,
                       containers == 0.5.6.*,
                       aeson == 0.8.0.*,
                       lens == 4.9.*,
                       lens-aeson == 1.0.0.*,
                       bytestring == 0.10.*,
                       data-default == 0.5.*,
                       transformers == 0.4.3.*,
                       attoparsec == 0.12.1.*,
                       text-format == 0.3.1.*,
                       regex-tdfa == 1.2.*,
                       time == 1.*,
                       old-locale == 1.*,
                       random == 1.1.*
  hs-source-dirs:      src
  default-language:    Haskell2010

executable client
  main-is:             Client.hs
  default-extensions:  OverloadedStrings,
                       ScopedTypeVariables,
                       TemplateHaskell    
  build-depends:       base >=4.8 && <4.9, 
                       websockets == 0.9.3.*, 
                       text == 1.2.*, 
                       text-format == 0.3.1.*,
                       mtl == 2.2.*,
                       network == 2.6.0.*,
                       containers == 0.5.6.*,
                       aeson == 0.8.0.*,
                       lens == 4.9.*,
                       lens-aeson == 1.0.0.*,
                       bytestring == 0.10.*,
                       data-default == 0.5.*,
                       transformers == 0.4.3.*
  hs-source-dirs:      src
  default-language:    Haskell2010

executable hipchatclient
  main-is:             HipChatClient.hs
  default-extensions:  OverloadedStrings,
                       ScopedTypeVariables,
                       TemplateHaskell    
  build-depends:       base >=4.8 && <4.9, 
                       websockets == 0.9.3.*, 
                       text == 1.2.*, 
                       text-format == 0.3.1.*,
                       mtl == 2.2.*,
                       unix >= 2.7 && < 3.0,
                       network == 2.6.0.*,
                       containers == 0.5.6.*,
                       aeson == 0.8.0.*,
                       lens == 4.9.*,
                       lens-aeson == 1.0.0.*,
                       bytestring == 0.10.*,
                       data-default == 0.5.*,
                       transformers == 0.4.3.*,
                       wreq-sb == 0.4.*,
                       scotty >= 0.9
  hs-source-dirs:      src
  default-language:    Haskell2010

